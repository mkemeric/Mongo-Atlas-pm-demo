
# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_URI="mongodb+srv://************************"
DATABASE_NAME="pmd"

# ============================================================================
# LLM Configuration (for answer generation)
# ============================================================================
LLM_API_ENDPOINT="https://api.openai.com/v1"
LLM_API_KEY="sk-proj-********************************"
COMPLETION_MODEL="gpt-3.5-turbo-16k-20241031"

# ============================================================================
# Embedding API Configuration
# ============================================================================

# Set to 'true' to use OpenAI-compatible API, 'false' to use Voyage AI native API
USE_OPENAI_COMPATIBLE_EMBEDDINGS="false"

# ---- Option 1: OpenAI-Compatible API (MLIS, vLLM, etc.) ----
# Use these settings when USE_OPENAI_COMPATIBLE_EMBEDDINGS=true
EMBEDDING_API_ENDPOINT="https://your-mlis-endpoint.com/v1"
EMBEDDING_API_KEY="your-openai-compatible-api-key"
EMBEDDING_MODEL="qwen-embedding-model-name"

# ---- Option 2: Voyage AI Native API ----
# Use these settings when USE_OPENAI_COMPATIBLE_EMBEDDINGS=false
# (VOYAGE_API_KEY will be used as EMBEDDING_API_KEY if EMBEDDING_API_KEY is not set)
VOYAGE_API_ENDPOINT="https://api.voyageai.com/v1"
VOYAGE_API_KEY="pa-r-********************************"
# EMBEDDING_MODEL="voyage-3-large"  # Uncomment for Voyage AI

# ============================================================================
# Example Configurations:
# ============================================================================

# Example 1: Use Voyage AI native API
# USE_OPENAI_COMPATIBLE_EMBEDDINGS="false"
# VOYAGE_API_KEY="pa-r-your-voyage-key"
# EMBEDDING_MODEL="voyage-3-large"

# Example 2: Use OpenAI-compatible API (e.g., HPE MLIS with Qwen)
# USE_OPENAI_COMPATIBLE_EMBEDDINGS="true"
# EMBEDDING_API_ENDPOINT="https://mlis.example.com/v1"
# EMBEDDING_API_KEY="your-mlis-api-key"
# EMBEDDING_MODEL="qwen2-embedding"

# Example 3: Use OpenAI-compatible API with Voyage model hosted on MLIS
# USE_OPENAI_COMPATIBLE_EMBEDDINGS="true"
# EMBEDDING_API_ENDPOINT="https://mlis.example.com/v1"
# EMBEDDING_API_KEY="your-mlis-api-key"
# EMBEDDING_MODEL="voyage-3-large"
